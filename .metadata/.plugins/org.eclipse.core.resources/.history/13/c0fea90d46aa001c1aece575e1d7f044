import java.awt.EventQueue;

import java.awt.event.* ;  
import javax.swing.* ;
import java.awt.*  ; 


public class intro implements ActionListener {

	private JFrame frame;
	private JTextField userText;
	private static JLabel LogTrue;
	public static JButton login;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					intro window = new intro();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	public intro() {
		frame = new JFrame();
		frame.setBounds(100, 100, 442, 195);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		JLabel lblNewLabel = new JLabel("ID :");
		lblNewLabel.setFont(new Font("Tahoma", Font.PLAIN, 17));
		lblNewLabel.setBounds(20, 50, 38, 46);
		frame.getContentPane().add(lblNewLabel);
		
		userText = new JTextField("");
		userText.setBounds(55, 65, 194, 23);
		frame.getContentPane().add(userText);
		userText.setColumns(10);
		
		JLabel lblNewLabel_1 = new JLabel("THIS SOFTWARE IS NOT USED FOR UNIVERSITY MANAGEMENT PURPOSE");
		lblNewLabel_1.setFont(new Font("Tahoma", Font.BOLD, 11));
		lblNewLabel_1.setHorizontalAlignment(SwingConstants.CENTER);
		lblNewLabel_1.setBounds(10, 11, 403, 28);
		frame.getContentPane().add(lblNewLabel_1);
		
		JLabel lblNewLabel_2 = new JLabel("Please enter your ID");
		lblNewLabel_2.setBounds(55, 91, 151, 14);
		frame.getContentPane().add(lblNewLabel_2);
		
		
		JButton exit = new JButton( "EXIT" );
		exit.setBounds(259, 99, 106, 23);
		frame.getContentPane().add(exit);
		exit.addActionListener(new exit());
		
		JLabel LogTrue = new JLabel("h");
		LogTrue.setBounds(10, 142, 206, 14);
		frame.getContentPane().add(LogTrue);
		
		JButton login = new JButton("Log In ");
		login.setBounds(259, 65, 106, 23);
		frame.getContentPane().add(login);
		frame.setVisible(true);

	}
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		String user = userText.getText() ; 
		
		if(user.equals("admin")) {
			admin a = new admin() ; 
			a.a2(); 
		}
		
		else {
			//will tell the user to try again
			LogTrue.setText("ID NOT Recognized, Please Try Again");
			
		}
		
	}
